<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cnbs.recyclerviewdemo.groupRV.GroupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mulit_edit_shape"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/rv_group_0"/>

        <TextView
            android:id="@+id/group_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mulit_edit_shape"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/rv_group_1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/group_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mulit_edit_shape"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/rv_group_2"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
